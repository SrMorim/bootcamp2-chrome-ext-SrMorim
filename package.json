{
  "name": "bootcamp-pomodoro-pwa",
  "version": "2.0.0",
  "description": "Pomodoro Timer PWA - Entrega Final com Backend + Docker + CI/CD",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "install:all": "npm install && cd apps/web && npm install && cd ../api && npm install",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "build:web": "cd apps/web && npm run build",
    "start:api": "cd apps/api && npm start",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test:e2e": "cd tests/e2e && npm run test",
    "test:unit": "cd apps/api && npm test"
  },
  "keywords": [
    "pomodoro",
    "timer",
    "pwa",
    "productivity",
    "progressive-web-app"
  ],
  "author": "SrMorim",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.46.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
